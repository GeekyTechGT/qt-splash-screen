{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "windows-mingw64-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "C:/eng_apps/msys64/mingw64/bin/g++.exe",
                "CMAKE_MAKE_PROGRAM": "C:/eng_apps/msys64/mingw64/bin/ninja.exe"
            },
            "environment": {
                "PATH": "C:/eng_apps/msys64/mingw64/bin;$penv{PATH}"
            }
        },
        {
            "name": "windows-clang-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "C:/eng_apps/msys64/clang64/bin/clang++.exe",
                "CMAKE_MAKE_PROGRAM": "C:/eng_apps/msys64/clang64/bin/ninja.exe"
            },
            "environment": {
                "PATH": "C:/eng_apps/msys64/clang64/bin;$penv{PATH}"
            }
        },
        {
            "name": "windows-mingw64-debug",
            "displayName": "Windows MinGW64 GCC Debug",
            "inherits": "windows-mingw64-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PREFIX_PATH": "C:/eng_apps/Qt/6.10.1/mingw_64"
            }
        },
        {
            "name": "windows-mingw64-release",
            "displayName": "Windows MinGW64 GCC Release",
            "inherits": "windows-mingw64-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "C:/eng_apps/Qt/6.10.1/mingw_64"
            }
        },
        {
            "name": "windows-clang-debug",
            "displayName": "Windows Clang Debug",
            "inherits": "windows-clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_PREFIX_PATH": "C:/eng_apps/Qt/6.10.1/llvm-mingw_64"
            }
        },
        {
            "name": "windows-clang-release",
            "displayName": "Windows Clang Release",
            "inherits": "windows-clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "C:/eng_apps/Qt/6.10.1/llvm-mingw_64"
            }
        },
        {
            "name": "linux-gcc-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-clang-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GCC Debug",
            "inherits": "linux-gcc-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux GCC Release",
            "inherits": "linux-gcc-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux Clang Debug",
            "inherits": "linux-clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux Clang Release",
            "inherits": "linux-clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-mingw64-debug",
            "configurePreset": "windows-mingw64-debug"
        },
        {
            "name": "windows-mingw64-release",
            "configurePreset": "windows-mingw64-release"
        },
        {
            "name": "windows-clang-debug",
            "configurePreset": "windows-clang-debug"
        },
        {
            "name": "windows-clang-release",
            "configurePreset": "windows-clang-release"
        },
        {
            "name": "linux-gcc-debug",
            "configurePreset": "linux-gcc-debug"
        },
        {
            "name": "linux-gcc-release",
            "configurePreset": "linux-gcc-release"
        },
        {
            "name": "linux-clang-debug",
            "configurePreset": "linux-clang-debug"
        },
        {
            "name": "linux-clang-release",
            "configurePreset": "linux-clang-release"
        }
    ],
    "testPresets": [
        {
            "name": "windows-mingw64-debug",
            "configurePreset": "windows-mingw64-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "windows-mingw64-release",
            "configurePreset": "windows-mingw64-release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "windows-clang-debug",
            "configurePreset": "windows-clang-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "windows-clang-release",
            "configurePreset": "windows-clang-release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "linux-gcc-debug",
            "configurePreset": "linux-gcc-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "linux-gcc-release",
            "configurePreset": "linux-gcc-release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "linux-clang-debug",
            "configurePreset": "linux-clang-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "linux-clang-release",
            "configurePreset": "linux-clang-release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
